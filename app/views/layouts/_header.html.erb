<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Movies</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <!--顧客ログイン-->
        <% if customer_signed_in? %>
        <div class="mr-8 mt-2 text-light">
          <i class="fas fa-child"></i>ようこそ、<%= current_customer.name %>様<i class="fas fa-child"></i>
          </div>
          <li>
            <%= link_to customer_path(current_customer), class:'nav-link text-light' do %>
            <i class="fas fa-user-check"></i>マイページ
            <% end %>
          </li>
          <li>
            <%= link_to search_path, class:'nav-link text-light' do %>
            <i class="fas fa-cookie-bite"></i> 映画一覧
            <% end %>
          </li>
          <li>
            <%= link_to customers_path, class:'nav-link text-light' do %>
            <i class="fas fa-shopping-cart"></i>会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to  destroy_customer_session_path, method: :delete, class:'nav-link text-light' do %>
            <i class="fas fa-user-slash"></i>ログアウト
            <% end %>
          </li>

        <!--管理者ログイン-->
        <% elsif admin_signed_in? %>
          <div class="mr-8 mt-2 text-light">
              <i class="fas fa-user-astronaut"></i>管理者ログイン<i class="fas fa-user-astronaut"></i>
          </div>
          <li>
            <%= link_to admin_movies_path, class:'text-light' do %>
            <i class="fas fa-list-ol"></i>映画一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_customers_path, class:'nav-link text-light' do %>
            <i class="fas fa-users"></i>会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to  admin_root_path, class:'nav-link text-light' do %>
            <i class="fab fa-opencart"></i>レビュー管理
            <% end %>
          </li>
          <li>
            <%= link_to admin_genres_path, class:'nav-link text-light' do %>
            <i class="fas fa-tags"></i>ジャンル一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link text-light' do %>
             <i class="fas fa-user-slash"></i>ログアウト
            <% end %>
          </li>

          <!--未ログイン-->
        <% else %>
        <div class="mr-8 mt-2 text-light">
          <i class="far fa-smile"></i>ようこそ、ゲスト様<i class="far fa-smile"></i>
        </div>
          <li>
            <%= link_to about_path, class:'nav-link text-light' do  %>
            <i class="fas fa-wifi"></i>About
            <% end %>
          </li>
          <li>
            <%= link_to search_path, class:'nav-link text-light' do %>
            <i class="fas fa-list-ol"></i>映画一覧
            <% end %>
          </li>
          <li>
            <%= link_to  new_customer_registration_path, class:'nav-link text-light' do %>
            <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class:'nav-link text-light' do %>
            <i class="fas fa-user-ninja"></i>ログイン
            <% end %>
          </li>
        <% end %>
          </ul>

      </div>
    </div>
  </nav>
</header>