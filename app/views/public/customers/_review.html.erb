<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>映画タイトル</th>
      <th>レビュー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% reviews.each do |review| %>
      <tr>
        <td><%= link_to(review.movie) do %>
          <%= image_tag review.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= review.title %></td>
        <td><%= review.review %></td>
      </tr>
    <% end %>
  </tbody>
</table>