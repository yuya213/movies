<table class='table'>
  <tr><%= image_tag customer.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>名前</th>
	  <th><%= customer.name %></th>
  </tr>
  
  <tr>
	  <th>自己紹介</th>
	  <th><%= customer.introduction %></th>
  </tr>

  <tr>
    <th>フォロー</th>
    <th>
      <a href= <%= customer_followings_path(customer) %> >
      <%= customer.followings.count %>
      </a>
    </th>
  </tr>
  
  <tr>
    <th>フォロワー</th>
    <th>
      <a href= <%= customer_followers_path(customer) %> >
      <%= customer.followers.count %>
     </a>
    </th>
  </tr>
</table>


<div class='row'>

  <% if current_customer != customer %>
     <% if current_customer.following?(customer) %>
     <%= link_to "フォロー外す", customer_relationships_path(customer.id), method: :delete, class: 'btn btn-danger' %>
     <% else %>
     <%= link_to "フォローする", customer_relationships_path(customer.id), method: :post, class: 'btn btn-success' %>
     <% end %>
     
  <% else %>

   <div class>
     <%= link_to "編集する", edit_customer_path(customer), class:"btn btn-success" %>
   </div>

  <% end %>
  </div>
  
   <div class="form-group">
      <%= link_to "レビューを書く", new_review_path(customer), class:"r-5 btn btn-sm btn-warning text-white'" %>
   </div>
