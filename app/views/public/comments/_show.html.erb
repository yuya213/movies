<% review.comments.each do |comment| %>
       <p>
        <%= image_tag comment.customer.get_profile_image, size:"50x50" %>
        <%= comment.comment %>
        <% if comment.customer == current_customer %>
        <%= link_to "Destroy", review_comment_path(comment.review, comment), method: :delete, remote: true, data: {"turbolinks" => false} , class: "btn btn-sm btn-danger"  %>
        <% end %>
        <br>
        <%= link_to(review.customer) do %>
        <%= review.customer.name %>
        <% end %>
       </p>
      <% end %>