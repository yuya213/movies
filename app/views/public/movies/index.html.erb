<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h1 class="mt-3">映画一覧</h1>
      <p>全<%= @movies.total_count %>件 中<%= @movies.count %>件</p>
      <div class="d-flex flex-wrap mx-auto justify-content-center">
      <% @movies.each do |movie| %>
        <span class="ml-3">
            <div class="item-container">
  <%= link_to movie_path(item.id) do %>
  <%= image_tag movie.image, size: '190x120' %>
  <% end %>
  <p>
    <%= link_to movie_path(movie.id), class: "btn-link text-dark" do %>
      <%= movie.name %>
    <% end %>
  </p>
</div>
        </span>
      <% end %>
      </div>
      <%= paginate @movies %>
    </div>
  </div>
</div>
