<div class='col-md-10 offset-md-1'>
  <h3>フォローページ</h3>
    <% if @customers.count > 0 %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th colspan="4"></th>
        </tr>
      </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag customer.get_profile_image, size:"100x100" %></td>
            <td><%= customer.name %></td>
            <td>フォロー数: <%= customer.followings.count %></td>
            <td>フォロワー数: <%= customer.followers.count %></td>
            <td><%= link_to "会員詳細", customer_path(customer) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </tr>
  </table>
   <% else %>
   <span>ユーザーはいません</span>
  <% end %>
</div>
