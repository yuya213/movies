<%= render 'layouts/search' %>
 <%= render 'layouts/genre' %>
<div class='container'>
  <div class='row'>
    <div class="col-md-12 col-md-offset-1 mx-auto mt-3">

      <h1><%= @genre.name %>の投稿一覧</h1>

      <table class="table">
        <thead>
          <th class="table-active"></th>
          <th class="table-active">会員</th>
          <th class="table-active">映画</th>
          <th class="table-active">ジャンル</th>
          <th class="table-active">レビュー</th>
        </thead>
        <tbody>
          <% @review.each do |review| %>
           <tr>
              <!--ユーザ画像-->
              <td class = "align-middle">
                <%= link_to(review) do %>
                  <%= image_tag review.customer.get_profile_image, size:'100x100' %>
                <% end %>
              </td>
              <!--会員-->
              <td class = "align-middle">
               <%= review.customer.name %>
              </td>
              <!--映画-->
              <td class = "align-middle">
               <%= review.title %>
              </td>
              <!--ジャンル-->
              <td class = "align-middle">
               <%= review.genre.name %>
              <!--レビュー-->
              <td class = "align-middle">
               <%= review.review %>
              </td>
           </tr>
               <% end %>
          </tbody>
       </table>
   </div>
  </div>
 </div>
