<h2 class="mt-3"><%= @movie.name %> のレビューを書く</h2>
<%= form_with model: @review, local:true do |f| %>

  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :introduction, class: 'form-control review_introducton' %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿"  class: 'btn btn-success' %>
  </div>
<% end %>
