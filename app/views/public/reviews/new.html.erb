<h2 class="mt-3">レビュー投稿</h2>
<%= form_with model: @review, local:true do |f| %>
  
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :introduction, class: 'form-control review_introducton' %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>