<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2 class="mt-3">レビューを書く</h2>
<%= form_with model: @review, local:true do |f| %>

  
  <div class="form-group">
    <%= f.label :映画タイトル %>
    <%= f.text_field :title, class: 'form-control review_title' %>
  </div>
  
  <div class = "form_group">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択して下さい" %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :レビュー %>
    <%= f.text_area :review, class: 'form-control review_review' %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿",  class: 'btn btn-success' %>
  </div>
<% end %>
</div>
  </div>
</div>
