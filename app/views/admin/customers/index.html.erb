<div class="container">
 <div class="row">
  <div class="col-md-12 col-md-offset-1 mx-auto mt-3">
  <table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to  customer.name, admin_customer_path(customer)  %></td>
        <td><%= link_to  customer.email, admin_customer_path(customer)  %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
          <td>
            <% if customer.is_deleted %>
              <span class="text-secondary font-weight-bold">退会</span>
            <% else %>
              <span class="text-success font-weight-bold">有効</span>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
    <%= paginate @customers %>
  </table>
 </div>
</div>